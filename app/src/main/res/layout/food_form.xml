<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tommymathews.slackersguidetohealth.FoodRecipesActivity"
    style="@style/margins">

    <TextView
        android:text="@string/recipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/recipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Vegan Rhino Cutlet"/>

    <TextView
        android:text="@string/recipeCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/recipeCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="600"
        android:inputType="number"/>

    <TextView
        android:text="Ingredients:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/recipeIngredients"
        android:hint="50 eggs, 20 rhinos, 3 stalks of broccoli..."/>

    <TextView
        android:text="Process:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/recipeInstructions"
        android:hint="Mash the eggs and the beetles..."/>

    <ImageView android:layout_height="80dp"
        android:layout_width="80dp"
        android:id="@+id/photo"/>

    <ImageButton
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/camera"
        app:srcCompat="@android:drawable/ic_menu_camera"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Form"
        android:id="@+id/submit"/>


</LinearLayout>