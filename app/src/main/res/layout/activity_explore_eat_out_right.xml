<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tommymathews.slackersguidetohealth.ExploreEatOutRight">

    <TextView
        android:id="@+id/txt_view_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:textAllCaps="true"
        android:textSize="40dp"
        android:text="@string/explore" />

    <TextView
        android:id="@+id/txt_view_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:gravity="center"
        android:text="Preferences"
        android:textSize="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@color/black"
        android:text="* Pick one important preferences. values are rated"/>

    <Button
        android:id="@+id/distance_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Distance"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/health_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Heathiest Scale"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:inputType="text"
        android:text="* Restaurants are rated on the avarage calorie intake and nutritional value of all foods."
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/cost_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Cost"
        android:textSize="30dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:itemBackground="@color/orange"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_navigation" />




</LinearLayout>