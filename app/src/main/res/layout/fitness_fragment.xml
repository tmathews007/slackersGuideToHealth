<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView
        android:id="@+id/fitness_image_front"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/fitness_image_front"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/fitness_image_front_overlay"
        android:layout_width="273dp"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/fitness_image_front_overlay_v2"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Create Workout"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/create_workout_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="35dp" />
    </RelativeLayout>

</FrameLayout>