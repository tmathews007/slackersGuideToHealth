<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/margins"
    android:weightSum="1">


    <TextView
        android:text="@string/food_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="0"
        style="@style/FontAndSizeInstructionsTitle" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ImageView
        app:srcCompat="@drawable/food_pyramid"
        android:id="@+id/imageView"
        android:layout_weight="0.70"
        android:layout_width="330dp"
        android:layout_height="70dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0" />

    <Button
        android:id="@+id/get_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/get_food_recipe_button"
        style="@android:style/Widget.Button" />

    <Button
        android:id="@+id/submit_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/submit_food_recipe_button"
        style="@android:style/Widget.Button"
        android:elevation="0dp" />

</LinearLayout>
