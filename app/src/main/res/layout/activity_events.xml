<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tommymathews.slackersguidetohealth.Events"
    style="@style/margins">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stateEvents"/>
    <EditText
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/stateReq"
        android:text="@string/defaultState"
        android:inputType="text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cityEvents"/>
    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/cityReq"
        android:text="@string/defaultCity"
        android:inputType="text"/>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_danceathon"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:srcCompat="@drawable/health_expo"/>

            <TextView
                android:id="@+id/mentalHealth"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_toRightOf="@+id/img_wellness"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/mentalHealthDescription"/>

            <ImageView
                android:id="@+id/img_health"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_danceathon"
                app:srcCompat="@drawable/danceathon"/>

            <TextView
                android:id="@+id/physicalHealth"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@+id/img_danceathon"
                android:layout_toEndOf="@+id/img_danceathon"
                android:gravity="center_horizontal|center"
                android:text="@string/physicalHealthDescription"/>

            <ImageView
                android:id="@+id/img_wellness"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_health"
                app:srcCompat="@drawable/wellness_expo"/>

            <TextView
                android:id="@+id/emotionalHealth"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@+id/img_health"
                android:layout_toEndOf="@+id/img_wellness"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/emotionalHealthDescription"/>
        </RelativeLayout>

    </FrameLayout>


</LinearLayout>
