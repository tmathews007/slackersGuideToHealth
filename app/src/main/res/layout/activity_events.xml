<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tommymathews.slackersguidetohealth.Events"
    style="@style/margins">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eventsDesc"
        style="@style/FontAndSizeInstructionsTitle"
        android:textColor="@color/darkOrchid"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stateEvents"/>
    <EditText
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/stateReq"
        android:inputType="text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cityEvents"/>
    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/cityReq"
        android:inputType="text"/>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mental"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/health_expo"/>

            <ImageView
                android:id="@+id/physical"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/danceathon"/>

            <ImageView
                android:id="@+id/emotional"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/wellness_expo"/>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>