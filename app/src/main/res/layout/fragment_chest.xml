<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/margins">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chest_workout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/chest_workout_dips"
            style="@style/WorkoutFontAndSizeTitle" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:id="@+id/dips_image"
            android:src="@drawable/dips" />

        <TextView
            android:text="@string/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instructions_title"
            style="@style/WorkoutFontAndSizeInstructionsTitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chest_workout"
            android:text="@string/chest_workout_instructions"
            style="@style/WorkoutFontAndSizeInstructions" />

    </LinearLayout>

</ScrollView>